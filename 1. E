Algoritmo sin_titulo
	// Declaración de variables
	definir numero como entero
	
	// Lectura de datos
	Leer numero
	
	// Validar el número
	Si numero < 1 O numero > 7 Entonces
		Escribir("El número ingresado no es válido.")
	SiNo
		escribir ""
	FinSi	
	
	Segun numero Hacer
		1:
			escribir "lunes"
		2:
			escribir "martes"
		3:
			escribir "miercoles"
		4:
			escribir "jueves"
		5:
			escribir "viernes"
		6:
			escribir "sabado"
		7:
			escribir "domingo"
	Fin Segun
	
FinAlgoritmo
